{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,  // Adjust based on your needs
    "esModuleInterop": true,
    "module": "commonjs",  // Common alternative
    "moduleResolution": "node",  // Standard for most setups
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*/*.tsx"],
  "exclude": ["node_modules"]
}
